html
  head
    title=title
    style
      include ../css/style.css
    meta(name="viewport" content="width=device-width, initial-scale=1")
    meta(name="twitter:card" content="summary")
    meta(name="og:title" content=title)
    meta(name="og:description" content=content)
    meta(name="og:image" content=image)
    link(rel='icon', href=site.favicon, type='image/png')
  body
    .container
      .header
        a(href=site.url) !{site.title}
      .post-title= title
      .meta= meta
      | !{content}
      .footer
        ul(class="nav")
          li(class="first")
            a(href='/') Home
          li 
            a(href='/rss') RSS
          li
            a(href='https://twitter.com/aTylerRobertson') Twitter